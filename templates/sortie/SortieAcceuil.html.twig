{% extends 'sortie/SortieLayOut.html.twig' %}

{% block header %} {{ parent()}}  {%endblock %}

{% block body %}
<body class="body-acceuil">

<div class="form-filter form-group">
    {{ form_start(SortieFilterType) }}
    <h3>Filtrer les sorties</h3>
    {{ form_widget(SortieFilterType) }}
    <button class="btn btn-lg btn-primary">Recherche</button>
    {{ form_end(SortieFilterType) }}
</div>
<div class="table-wrapper">
    <table class="table table-borderless">
        <thead>
        <tr>
            <th scope="col">Nom de la Sortie</th>
            <th scope="col">Date de la Sortie</th>
            <th scope="col">Clôture</th>
            <th scope="col">Inscrits/places</th>
            <th scope="col">Etat</th>
            <th scope="col">Inscrit</th>
            <th scope="col">Organisateur</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for sortie in sorties %}
        <tr>
            <td>{{ sortie.nom }}</td>
            <td>{{ sortie.dateHeureDebut | date('d-m-Y')}}</td>
            <td>{{ sortie.dateLimiteInscription | date('d-m-Y')}}</td>
            <td>{{ sortie.inscrit | length }} {{ "/"}} {{ sortie.nbInscriptionMax}} </td>
            <td>{{ sortie.etat.libelle }}</td>
            <td>{{ "#"}}</td>
            <td>{{ sortie.organisateur }}</td>
            <td>
                <a href="#">Afficher</a>
                <a href="#">Se désister</a>
                <a href="#">Modifier</a>
                <a href="#">Publier</a>
                <a href="#">Annulé</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</body>
{% endblock %}

{% block footer %} {{ parent() }} {% endblock %}
