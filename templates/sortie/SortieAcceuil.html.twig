{% extends 'sortie/SortieLayOut.html.twig' %}

{% block header %} {{ parent()}}  {%endblock %}

{% block body %}
<body class="body-acceuil">
<div class="table-wrapper">
    <table class="table table-borderless">
        <thead>
        <tr>
            <th scope="col">Nom de la Sortie</th>
            <th scope="col">Date de la Sortie</th>
            <th scope="col">Clôture</th>
            <th scope="col">Inscrits/places</th>
            <th scope="col">Etat</th>
            <th scope="col">Inscrit</th>
            <th scope="col">Organisateur</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>

        <tbody>
        {% for sortie in sorties %}
        <tr>
            <td>{{ sortie.nom }}</td>
            <td>{{ sortie.dateHeureDebut | date('d-m-Y H:i:s ')}}</td>
            <td>{{ sortie.duree}} en minutes</td>
            <td>{{ sortie.nbInscriptionMax }}</td>
            <td>{{ sortie.etat.libelle }}</td>
            <td>{{ sortie.inscrit | length }}</td>
            <td>{{ sortie.organisateur }}</td>
            <td>
                <a href="#">Afficher</a>
                <a href="#">Se désister</a>
                <a href="#">Modifier</a>
                <a href="#">Publier</a>
                <a href="#">Annuelle</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</body>
{% endblock %}

{% block footer %} {{ parent() }} {% endblock %}
