{% extends 'sortie/SortieAcceuil.html.twig' %}

{% block header %} {{ parent() }}  {% endblock %}

{% block body %}
    <body>
    <div class="container">
        <div class="row"></div>
    <div class="form-group d-flex justify-content-center col-12" >
        {{ form_start(sortie_type) }}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <h1>Nouvelle Sortie</h1>
        {{ form_widget(sortie_type) }}

        <button class="btn btn-lg btn-primary">Ajouter votre sortie</button>
        {{ form_end(sortie_type) }}
    </div>
    </div>
    </body>
{% endblock %}

{% block footer %} {{ parent() }} {% endblock %}