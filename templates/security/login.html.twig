{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}



{% block body %}
    <body>
    <h5><a class="p-2 text-dark link-login" href="{{ path('app_register') }}">S'inscrire</a></h5>

    <form class="form-login" method="post">
        {% if error is defined %}
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        {% endif %}


        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required
               autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">

        <div class="checkbox mb-3">
            <label for="remember_me">
                <input type="checkbox" id="remember_me" name="_remember_me"> Se souvenir de moi
            </label>

            <a class="p-2 text-dark" href="#">Mot de passe oubli√©</a>

        </div>
        <button class="btn btn-lg btn-primary" type="submit">
            Connexion
        </button>
    </form>
    </body>
{% endblock %}
